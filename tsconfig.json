{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "compilerOptions": {
      "lib": ["es2022"],
      "module": "commonjs",
      "target": "es2022",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "outDir": "lib"
    },
    "ts-node": {
      "esm": true
    } ,
    "include": ["src/**/*"],
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "types": ["jest", "node", "src/@types"]
}
  