{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "declaration": true,
      "moduleResolution": "node"
    },
    "ts-node": {
      "esm": true
    },
    "declaration": true,
    "include": ["src/**/*"],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
}
  